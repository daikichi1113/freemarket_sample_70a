.wrapper
  = render "shared/header"
  .nav
    %ul.navber
      =link_to "#" do
        %li furima
      %li= icon('fa', 'angle-right')
      =link_to "#" do
        %li レディース
      %li= icon('fa', 'angle-right')
      =link_to "#" do
        %li トップス
      %li= icon('fa', 'angle-right')
      =link_to "#" do
        %li Tシャツ/カットソー(半袖/袖なし)
      %li= icon('fa', 'angle-right')
      =link_to "#" do
        %li product1
  .main
    .showMain
      .showMain__contents
        .showMain__contents__content
          .itemBox
            .itemBox__name
              %h2= @item.name
            .itemBox__image
              %ul
                %li
                = image_tag @item.item_images[0].image ,class:"mainImage"
                %ul
                  - @item.item_images.each do |image|
                    %li= image_tag image.image
            .itemBox__price
              %span.totalPrice= "¥ #{@item.price}"
              .itemBox__price__detail
                %span (税込) 
                %span 送料込み
            - if user_signed_in?
              - if @item.seller_id == current_user.id
                = link_to "root_path", class:"sellerBtn" do
                  %h2 自分の商品です
              - elsif @item.buyer_id == nil
                = link_to "#", class:"buyBtn" do
                  %h2 購入画面に進む
              - else
                = link_to "root_path", class:"soldOutBtn" do
                  %h2 Sold Out
            - else
              = link_to "users_sign_in", class:"buyBtn" do
                %h2 ログインして購入
              = link_to "users_sign_up", class:"buyBtn" do
                %h2 新規会員登録して購入
            .itemBox__introduction
              = @item.item_description
            .table
              %table.table__details
                %tr
                  %th 出品者
                  %td= @item.seller.nickname
                %tr
                  %th カテゴリ
                  %td ※カテゴリ機能実装後に設定（Categoriesテーブルがないため）
                  -# = @item.category.name
                %tr
                  %th ブランド
                  %td ※商品出品機能実装後に設定（Brandテーブルがないため）
                  -# = @item.brand.name
                %tr
                  %th 商品の状態
                  %td= @item.item_condition.name
                %tr
                  %th 配送料の負担
                  %td= @item.postage_payer.name
                %tr
                  %th 発送元の地域
                  %td
                    =link_to "#" do 
                      = @item.prefecture.name
                %tr
                  %th 発送日の目安
                  %td= @item.preparation_day.name
            .optionalArea
              %ul.optionalArea__btn
                %li.likeBtn 
                  = icon('fa', 'star')
                  お気に入り 0
              %ul.optionalArea__btn
                =link_to "#" do
                  %li.reportBtn
                    = icon('fa', 'flag')
                    不適切な商品の通報
          .commentBox
            .commentContents
              %textarea
              %p.noticeMessage
                相手のことを考え丁寧なコメントを心がけましょう。
                %br
                不快な言葉遣いなどは利用制限や退会処分となることがあります。
              %submit.commentBtn
                = icon('fa', 'comment')
                コメントする
          %ul.links
            =link_to "#" do
              %li
                = icon('fa', 'angle-left')
                %span 前の商品
            =link_to "#" do
              %li
                %span 後ろの商品
                = icon('fa', 'angle-right')
          .relatedItems
            =link_to "#" do
              ベビー・キッズをもっと見る
  = render "shared/appBanner"
  = render "shared/footer"